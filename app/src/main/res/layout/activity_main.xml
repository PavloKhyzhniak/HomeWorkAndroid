<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:text="@string/mainTitle"
            android:textSize="24sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txvInfo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/student_text" />

        <ScrollView
            android:layout_below="@id/txvInfo"
            android:id="@+id/svButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnGoToHW001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/btn_GoToHW001" />

                <Button
                    android:id="@+id/btnGoToHW002"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnGoToHW001"
                    android:layout_centerHorizontal="true"
                    android:text="@string/btn_GoToHW002" />

                <Button
                    android:id="@+id/btnGoToHW003"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnGoToHW002"
                    android:layout_centerHorizontal="true"
                    android:text="@string/btn_GoToHW003" />

                <LinearLayout
                    android:id="@+id/llHW004"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnGoToHW003"
                    android:layout_alignStart="@id/btnGoToHW003"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnGoToHW004"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_GoToHW004" />

                    <ImageButton
                        android:id="@+id/btnGoToLoginHW004"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:background="@mipmap/ic_hand_key_round"
                        android:contentDescription="@string/image_button" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnGoToHW005"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llHW004"
                    android:layout_centerHorizontal="true"
                    android:text="@string/btn_GoToHW005" />

                <Button
                    android:id="@+id/btnGoToHW006"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnGoToHW005"
                    android:layout_centerHorizontal="true"
                    android:text="@string/btn_GoToHW006" />

                <Button
                    android:id="@+id/btnGoToHW007"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnGoToHW006"
                    android:layout_centerHorizontal="true"
                    android:text="@string/btn_GoToHW007" />

                <Button
                    android:id="@+id/btnGoToHW008"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnGoToHW007"
                    android:layout_centerHorizontal="true"
                    android:text="@string/btn_GoToHW008" />

                <Button
                    android:id="@+id/btnGoToHW009"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnGoToHW008"
                    android:layout_centerHorizontal="true"
                    android:text="@string/btn_GoToHW009" />

                <Button
                    android:id="@+id/btnGoToHW010"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnGoToHW009"
                    android:layout_centerHorizontal="true"
                    android:enabled="false"
                    android:text="@string/btn_GoToHW010" />

            </RelativeLayout>
        </ScrollView>

        <Button
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@id/svButtons"
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="end"
            android:text="@string/btn_Exit" />

    </RelativeLayout>
</LinearLayout>