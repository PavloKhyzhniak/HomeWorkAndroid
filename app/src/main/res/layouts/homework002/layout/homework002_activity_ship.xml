<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="3dp"
            android:text="@string/head_ship"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llShip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageViewShip"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:contentDescription="TODO" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="30"
                        android:text="@string/ShipType"
                        android:textSize="22sp" />

                    <Spinner
                        android:id="@+id/spinnerType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="70" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_margin="6dp"
                        android:layout_weight="30"
                        android:text="@string/ShipName"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/edtShipName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_margin="6dp"
                        android:layout_weight="70"
                        android:textSize="22sp" android:autofillHints=""
                        android:inputType="text"
                        tools:ignore="LabelFor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="30"
                        android:text="@string/ShipCarryingCapacity"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/edtShipCarryingCapacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="70"
                        android:textSize="22sp" android:autofillHints=""
                        android:inputType="number"
                        tools:ignore="LabelFor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="30"
                        android:text="@string/ShipDestination"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/edtShipDestination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="70"
                        android:textSize="22sp" android:autofillHints=""
                        android:inputType="text"
                        tools:ignore="LabelFor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="30"
                        android:text="@string/ShipCargoType"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/edtShipCargoType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="70"
                        android:textSize="22sp" android:autofillHints=""
                        android:inputType="text"
                        tools:ignore="LabelFor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="25"
                        android:text="@string/CargoWeight"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/edtCargoWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="25"
                        android:textSize="22sp" android:autofillHints=""
                        android:inputType="number"
                        tools:ignore="LabelFor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="25"
                        android:text="@string/CargoPrice"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/edtCargoPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="25"
                        android:textSize="22sp" android:autofillHints=""
                        android:inputType="number"
                        tools:ignore="LabelFor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/swtIndicationSpecialPier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layoutDirection="rtl"
                        android:onClick="onClickUseHandler"
                        android:text="@string/swt_IndicationSpecialPier_use"
                        android:textSize="18sp"
                        tools:ignore="UsingOnClickInXml" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/swtIndicationAnchoragePlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layoutDirection="rtl"
                        android:onClick="onClickUseHandler"
                        android:text="@string/swt_IndicationAnchoragePlace_use"
                        android:textSize="18sp"
                        tools:ignore="UsingOnClickInXml" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/swtIndicationRefueling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layoutDirection="rtl"
                        android:onClick="onClickUseHandler"
                        android:text="@string/swt_IndicationRefueling_use"
                        android:textSize="18sp"
                        tools:ignore="UsingOnClickInXml" />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <RadioGroup
                    android:id="@+id/rgrWeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_weight="33">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rgr_weight_head"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/rbtWeightInc20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickWeightIncHandler"
                        android:text="@string/rbt_weight_inc20"
                        tools:ignore="UsingOnClickInXml" />

                    <RadioButton
                        android:id="@+id/rbtWeightDec20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickWeightIncHandler"
                        android:text="@string/rbt_weight_dec20"
                        tools:ignore="UsingOnClickInXml" />

                </RadioGroup>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="25"
                        android:text="@string/Summary"
                        android:textSize="22sp" />
                    <TextView
                        android:id="@+id/txvSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="25"
                        android:layout_gravity="end"
                        android:text="0"
                        android:textSize="22sp" />
                    <Button
                        android:id="@+id/btnSummary"
                        style="@android:style/Widget.Holo.Button.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="3dp"
                        android:text="@string/btnSummary" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:weightSum="100">


                <Button
                    android:id="@+id/btnShipActivityProcess"
                    style="@android:style/Widget.Holo.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="50"
                    android:text="@string/btnShipActivityProcess" />

                <Button
                    android:id="@+id/btnShipActivityBack"
                    style="@android:style/Widget.Holo.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="50"
                    android:text="@string/btnShipActivityBack" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnReturnToHomeWork002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/btn_ReturnToHomeWork002" />

            <Button
                android:id="@+id/btnReturnToMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/btn_ReturnToMain" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>