<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".homework003.MainActivityHW003">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:text="@string/homework003" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="fill"
                android:text="@string/homework003_text" />

            <TextView
                android:id="@+id/txvExercises001"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="fill"
                android:text="@string/HW003_exercises001" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="fill"
                android:text="@string/HW003_exercises001_text" />

            <TextView
                android:id="@+id/txvExercises002"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="fill"
                android:text="@string/HW003_exercises002" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="fill"
                android:text="@string/HW003_exercises002_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnGoToExercises001"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_GoToHW002_Exercises001" />

                    <Button
                        android:id="@+id/btnGoToExercises002"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_GoToHW002_Exercises002" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnReturnToMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/btn_ReturnToMain" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
