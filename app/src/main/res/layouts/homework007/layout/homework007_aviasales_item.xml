<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:layout_centerInParent="true"
        android:layout_above="@id/txvLastName"
        android:id="@+id/txvDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_margin="2dp"
        android:id="@+id/txvLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_toEndOf="@+id/txvLastName"
        android:layout_centerInParent="true"
        android:layout_margin="2dp"
        android:id="@+id/txvFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/txvFlightNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/txvDepartureDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <ImageButton
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/ibtnEdit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="centerInside"
        android:background="@drawable/edit" />
</RelativeLayout>