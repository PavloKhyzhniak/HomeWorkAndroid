<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root_element"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_water_treatment_and_disinfection_header_1"
    tools:context=".homework004.LoginPage"
    tools:ignore="InvalidId">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LoginPageTitle"
            android:textSize="35sp"
            android:textColor="@color/black">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RegisterApp"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black">

        </TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/warnung_bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/warnung"
        android:textSize="12sp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_above="@id/warnung_bottom">
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:layout_margin="2dp"
            android:background="@drawable/btn_sign_in"
            android:text="@string/loginPage_bntLogIn"
            style="?attr/buttonBarStyle">
        </Button>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="@drawable/btn_register"
            android:text="@string/loginPage_bntRegister"
            style="?attr/buttonBarStyle" />
    </LinearLayout>

</RelativeLayout>